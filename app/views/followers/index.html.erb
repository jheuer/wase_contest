<h1>Listing followers</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Location</th>
    <th>Lat</th>
    <th>Lng</th>
    <th>Country</th>
  </tr>

<% @followers.each do |follower| %>
  <tr>
    <td><%=h follower.id %></td>
    <td><%=h follower.location %></td>
    <td><%=h follower.lat %></td>
    <td><%=h follower.lng %></td>
    <td><%=h follower.country %></td>
    <td><%= link_to 'Show', follower %></td>
    <td><%= link_to 'Edit', edit_follower_path(follower) %></td>
    <td><%= link_to 'Destroy', follower, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New follower', new_follower_path %>